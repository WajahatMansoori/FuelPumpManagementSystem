@using FuelPumpManagementSystem.Application.DTOs.Response
@using Microsoft.AspNetCore.Mvc.Rendering
@model DispenserIndexViewModel

<div class="container-fluid px-4">

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">Dispenser Configuration</h2>
            <small class="text-muted">Manage dispenser API & nozzle setup</small>
        </div>

        <!-- Site Settings Button -->
        <button class="btn btn-outline-secondary"
                data-bs-toggle="modal"
                data-bs-target="#siteConfigModal">
            ⚙ Site Settings
        </button>
    </div>

    <!-- Configuration Card -->
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Configure Dispenser</h5>
        </div>

        <div class="card-body">
            <form asp-action="Configure" method="post">
                <input asp-for="Configure.DispenserId" type="hidden" />

                <!-- API Endpoint -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Dispenser API Endpoint</label>

                    @if (Model.Configure?.DispenserId > 0)
                    {
                        <input asp-for="Configure.ApiEndPoint"
                               class="form-control"
                               readonly />
                    }
                    else
                    {
                        <input asp-for="Configure.ApiEndPoint"
                               class="form-control"
                               placeholder="e.g. 192.168.1.10" />
                    }
                </div>

                <!-- Nozzles -->
                <div class="row g-4">
                    <!-- Nozzle 1 -->
                    <div class="col-md-6">
                        <div class="border rounded p-3 h-100">
                            <div class="form-check form-switch mb-3">
                                <input asp-for="Configure.IsNozzle1Enabled"
                                       class="form-check-input" />
                                <label class="form-check-label fw-semibold">
                                    Nozzle 1 Enabled
                                </label>
                            </div>

                            <label class="form-label">Product Type</label>
                            <select asp-for="Configure.Nozzle1ProductTypeId"
                                    class="form-select"
                                    asp-items="@(new SelectList(Model.Products, "ProductId", "ProductName"))">
                                <option value="">-- Select Product --</option>
                            </select>
                        </div>
                    </div>

                    <!-- Nozzle 2 -->
                    <div class="col-md-6">
                        <div class="border rounded p-3 h-100">
                            <div class="form-check form-switch mb-3">
                                <input asp-for="Configure.IsNozzle2Enabled"
                                       class="form-check-input" />
                                <label class="form-check-label fw-semibold">
                                    Nozzle 2 Enabled
                                </label>
                            </div>

                            <label class="form-label">Product Type</label>
                            <select asp-for="Configure.Nozzle2ProductTypeId"
                                    class="form-select"
                                    asp-items="@(new SelectList(Model.Products, "ProductId", "ProductName"))">
                                <option value="">-- Select Product --</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Save Button -->
                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        💾 Save Configuration
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Dispenser List -->
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Configured Dispensers</h5>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>API IP</th>
                            <th>Nozzle 1</th>
                            <th>Nozzle 2</th>
                            <th>N1 Product</th>
                            <th>N2 Product</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var d in Model.Dispensers)
                        {
                            <tr>
                                <td class="fw-semibold">@d.DispenserId</td>
                                <td>@d.ApiEndPoint</td>

                                <td>
                                    <span class="badge @(d.Nozzle1Enabled ? "bg-success" : "bg-secondary")">
                                        @(d.Nozzle1Enabled ? "Enabled" : "Disabled")
                                    </span>
                                </td>

                                <td>
                                    <span class="badge @(d.Nozzle2Enabled ? "bg-success" : "bg-secondary")">
                                        @(d.Nozzle2Enabled ? "Enabled" : "Disabled")
                                    </span>
                                </td>

                                <td>@d.Nozzle1ProductTypeName</td>
                                <td>@d.Nozzle2ProductTypeName</td>

                                <td class="text-center">
                                    <a asp-action="Index"
                                       asp-route-id="@d.DispenserId"
                                       class="btn btn-sm btn-outline-primary">
                                        ✏️ Edit
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- ================= SITE CONFIGURATION MODAL ================= -->

<div class="modal fade" id="siteConfigModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg border-0">

            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title">Site Configuration</h5>
                <button type="button"
                        class="btn-close btn-close-white"
                        data-bs-dismiss="modal"></button>
            </div>

            <form asp-action="SaveSiteDetail"
                  method="post"
                  enctype="multipart/form-data">

                <div class="modal-body">
                    <div class="row g-4">

                        <!-- Logo -->
                        <div class="col-md-4 text-center">
                            <div class="border rounded p-3 h-100">
                                <img src="@(Model.SiteDetail?.SiteLogo ?? "/images/site-placeholder.png")"
                                     class="img-fluid rounded mb-3"
                                     style="max-height:120px;" />

                                <input type="file"
                                       name="SiteLogo"
                                       class="form-control form-control-sm" />

                                <small class="text-muted d-block mt-2">
                                    Upload site logo
                                </small>
                            </div>
                        </div>

                        <!-- Site Details -->
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Site Name</label>
                                <input asp-for="SiteDetail.SiteName"
                                       class="form-control"
                                       placeholder="Fuel Pump Name" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Site Address</label>
                                <textarea asp-for="SiteDetail.SiteAddress"
                                          class="form-control"
                                          rows="2"
                                          placeholder="Complete address"></textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Contact Phone</label>
                                <input asp-for="SiteDetail.SitePhone"
                                       class="form-control"
                                       placeholder="+92 300 1234567" />
                            </div>
                        </div>

                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-light"
                            data-bs-dismiss="modal">
                        Cancel
                    </button>

                    <button type="submit"
                            class="btn btn-primary px-4">
                        💾 Save Site Settings
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
