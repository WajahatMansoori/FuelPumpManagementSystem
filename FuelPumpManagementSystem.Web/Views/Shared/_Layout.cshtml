<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FuelPumpManagementSystem.Web</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Custom Sidebar CSS -->
    <link rel="stylesheet" href="~/css/custom-layout.css" asp-append-version="true" />
</head>
<body>
    <!-- ==================== LEFT SIDEBAR ==================== -->
    <div class="sidebar d-flex flex-column">
        <div class="text-center py-4 border-bottom">
            <h4 class="text-white mb-0">FuelPump System</h4>
        </div>
        <nav class="flex-grow-1">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="sidebar-link">🏠 Home</a>
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="sidebar-link">🔒 Privacy</a>
            <a asp-area="" asp-controller="Dispenser" asp-action="Index" class="sidebar-link">⛽ Dispensers</a>
            <a asp-area="" asp-controller="Site" asp-action="Index" class="sidebar-link">⚙ Site Settings</a>
        </nav>
    </div>

    <!-- ==================== MAIN CONTENT ==================== -->
    <div class="main-content">
        @RenderBody()
    </div>

    <!-- ==================== FOOTER ==================== -->
    
    <!-- ==================== SCRIPTS ==================== -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
